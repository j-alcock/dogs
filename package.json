{
  "name": "dog-breeds-api",
  "version": "1.0.0",
  "description": "A TypeScript-based API for CRUD operations on dog breeds",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "stop": "kill -9 $(lsof -t -i:3000) 2>/dev/null || true",
    "restart": "npm run stop && npm run dev",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=pact",
    "test:watch": "jest --watch",
    "test:pact": "jest --testPathPattern=pact",
    "test:pact:consumer": "jest --testPathPattern=pact/consumer",
    "test:pact:provider": "jest --testPathPattern=pact/provider",
    "pact:publish": "pact-broker publish pacts --consumer-app-version=$npm_package_version --broker-base-url=http://localhost:9292",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:all": "npm run test:unit && npm run test:pact && cd web-app && npx playwright test"
  },
  "keywords": [
    "dog",
    "breeds",
    "api",
    "typescript",
    "express",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/morgan": "^1.9.10",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^10.4.0",
    "@playwright/test": "^1.53.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^2.0.16",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tmp": "^0.2.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
